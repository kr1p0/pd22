@page
@model PracaDyplomowa.Pages.QRCode.QRCodeScanModel
@{
}


<script src="~/lib/ZXing/ZXing.min.js"></script>

<body onload="onloadQrScanner()">


    <section class="container">



        <div>
            <a class="button" id="startButton">Start</a>
            <a class="button" id="resetButton">Reset</a>
        </div>


        <div>
            <video id="video" muted playsinline width="300" height="200" style="border: 1px solid gray"></video>
        </div>


        <div id="sourceSelectPanel" style="display:none">
            <label for="sourceSelect">Change video source:</label>
            <select id="sourceSelect" style="max-width:400px">
            </select>
        </div>



        <label>Result:</label>
        <pre><code id="result"></code></pre>


    </section>


  
  

</body>

