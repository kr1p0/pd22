        <p style="font-size:1.1em ;font-weight:500;" class="p-2" id="displayChartDate"></p>
        <div id="innerChartContainer" class="row justify-content-center">
            <div id="displayChart" class="defaultClass col-lg-12 " style="display:none"></div>
            <div id="displayChart2" class="defaultClass col-lg-12 " style="display:none"></div>
            <div id="displayChart3" class="defaultClass col-lg-12 " style="display:none"></div>
        </div>
    </div>

</body>